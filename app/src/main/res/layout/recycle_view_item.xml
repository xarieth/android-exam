<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:elevation="16dp"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#c0000000"
        android:padding="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_vertical"

            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="invisible"
                />


            <TextView
                android:id="@+id/person_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/person_first_name"
                style="@style/autoscroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="John"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/green"
                android:textAllCaps="true"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/person_last_name"
                style="@style/autoscroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:layout_toRightOf="@+id/person_first_name"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:text="Doe"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/green"
                android:textAllCaps="true"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/person_email"
                style="@style/autoscroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:layout_below="@+id/person_first_name"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="johndoe@gmail.com"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/person_address"
                style="@style/autoscroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:layout_below="@+id/person_email"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:text="Makati, City"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/white"/>


        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>